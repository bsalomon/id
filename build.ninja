builddir = out

cc = clang -Weverything -Wno-vla -Wno-cast-align -fcolor-diagnostics

rule compile
    command = $cc -Werror -g -O3 -march=native -MD -MF $out.d $args -c $in -o $out
    depfile = $out.d
    deps    = gcc

rule link
    command = $cc $args $in -o $out

build out/idiff.o: compile idiff.c
    args = -I`brew --prefix`/include
build out/idiff: link out/idiff.o
    args = -L`brew --prefix`/lib -lpng
